void receiveEvent(int howMany)
{
   roll = Wire.read();
   pitch = Wire.read();
   yaw = Wire.read();
   sign = Wire.read();
   
   buf[0] = '255';
   buf[1] = roll;
   buf[2] = '254';
   buf[3] = pitch;
   buf[4] = '253';
   buf[5] = yaw;
   buf[6] = '252';
   buf[7] = sign;
   //buf[8] = '251';
   
   Serial.print("roll: ");
   Serial.print(roll);
   
   
   Serial1.write(buf[0]);
   Serial1.write(buf[1]);
   Serial1.write(buf[2]);
   Serial1.write(buf[3]);
   Serial1.write(buf[4]);
   Serial1.write(buf[5]);
   Serial1.write(buf[6]);
   Serial1.write(buf[7]);
   
   Serial.println();
   Serial.print("Pitch: ");
   Serial.print(pitch);
   
}
